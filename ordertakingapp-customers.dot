digraph OrderTakingApp {
    rankdir=LR;
    node [shape=box, style=filled, color=lightblue, fontname="Arial"];

    Customer [label="Customer\n(places order via mobile/web)"];
    Salesman [label="Salesman\n(places order on behalf of shop)"];
    Frontend [label="Frontend App\n(GitHub Pages)"];
    Backend [label="Backend Web App\n(Google Apps Script)"];
    Sheet [label="Google Sheet\n(Order Log)"];
    Distributor [label="Distributor\n(reviews consolidated orders)"];
    Shopkeeper [label="Retail Shopkeeper\n(receives products & serves customers)"];

    Customer -> Frontend [label="Select products\n+ quantities"];
    Salesman -> Frontend [label="Select products\n+ quantities"];
    Frontend -> Backend [label="Submit order\n(JSON payload)"];
    Backend -> Sheet [label="Append row\n(Timestamp, User/Customer,\nSKU, EN + Local Name, Qty, Price, Total)"];
    Sheet -> Distributor [label="Daily review\nPrepare deliveries"];
    Distributor -> Shopkeeper [label="Deliver products"];
    Shopkeeper -> Customer [label="Serve customers\nwith ordered products"];
}
